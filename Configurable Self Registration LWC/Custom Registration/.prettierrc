{
	"trailingComma": "none",
	"plugins": ["prettier-plugin-apex", "@prettier/plugin-xml"],
	"overrides": [
		{
			"files": "**/lwc/**/*.html",
			"options": { "parser": "lwc" }
		},
		{
			"files": "*.{cmp,page,component}",
			"options": { "parser": "html" }
		}
	],
	"useTabs": true,
	"tabWidth": 4,
	"printWidth": 180
}
